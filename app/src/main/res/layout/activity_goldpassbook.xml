<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<include layout="@layout/layer_goldpassbook_" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:text="幣別" />

                <TextView
                    style="@style/title"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="單位" />

                <TextView
                    style="@style/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="買入" />

                <TextView
                    style="@style/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="賣出" />

                <TextView
                    style="@style/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="走勢" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/data_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="轉換提領現貨應補繳差額(新台幣)" />

            <LinearLayout
                android:id="@+id/data_list2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1公斤"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="500克"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="250克"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100克"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/kilogram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9,999"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/grams500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8,888"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/grams250"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7,777"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/grams100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6,666"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/quote_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="報價時間 " />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorItemBackground"
                android:padding="10sp"
                android:text="@string/gold_passbook_wording"
                android:textColor="@color/colorWordingTextRed" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>