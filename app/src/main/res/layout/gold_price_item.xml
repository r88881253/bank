<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/country_icon"
        android:layout_width="25dp"
        android:layout_height="15dp" />

    <LinearLayout
        android:id="@+id/price_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/country_icon"
        android:layout_toLeftOf="@+id/next_btn"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/country_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="新台幣"
            android:gravity="center_vertical"
            android:textColor="@color/colorFont" />

        <TextView
            android:id="@+id/spec"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="克"
            android:gravity="center_vertical"
            android:textColor="@color/colorFont" />

        <TextView
            android:id="@+id/buy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="9,999"
            android:gravity="center_vertical"
            android:textColor="@color/colorFont" />

        <TextView
            android:id="@+id/sell"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="8,888"
            android:gravity="center_vertical"
            android:textColor="@color/colorFont" />

    </LinearLayout>

    <ImageView
        android:id="@+id/next_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitEnd"
        android:src="@drawable/personal_icon_arrow_enter"/>

    <TextView
        android:id="@+id/quote_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_info"
        android:layout_alignParentLeft="true" />

</RelativeLayout>